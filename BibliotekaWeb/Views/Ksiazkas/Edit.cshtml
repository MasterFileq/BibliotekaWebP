@model BibliotekaWeb.Models.Ksiazka

@{
    ViewData["Title"] = "Edytuj książkę";
}

<h1>Edytuj książkę</h1>

<!-- Wyświetlanie komunikatów o sukcesie lub błędzie -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Tytul" class="control-label"></label>
        <input asp-for="Tytul" class="form-control" />
        <span asp-validation-for="Tytul" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autor" class="control-label"></label>
        <input asp-for="Autor" class="form-control" />
        <span asp-validation-for="Autor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ISBN" class="control-label"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IloscEgzemplarzy" class="control-label"></label>
        <input asp-for="IloscEgzemplarzy" class="form-control" type="number" min="1" />
        <span asp-validation-for="IloscEgzemplarzy" class="text-danger"></span>
        <small class="form-text text-muted">Aktualnie dostępnych egzemplarzy: @Model.DostepneEgzemplarze. Nowa liczba egzemplarzy nie może być mniejsza niż liczba wypożyczonych książek.</small>
    </div>

    <div class="form-group">
        <label asp-for="Tematyka" class="control-label"></label>
        <select asp-for="Tematyka" class="form-control" asp-items="Html.GetEnumSelectList<BibliotekaWeb.Models.Tematyka>()">
            <option value="">-- Wybierz tematykę --</option>
        </select>
        <span asp-validation-for="Tematyka" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Zapisz" class="btn btn-primary" />
        <a asp-action="Katalog" class="btn btn-secondary">Powrót do listy</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}